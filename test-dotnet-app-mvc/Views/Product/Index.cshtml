@model List<Product>
<!-- News With Sidebar Start -->

@{ 
//Layout = "_LayoutUser";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                @{
                    if (product.IMAGEURLS != null)
                    {
                        List<string> tempList = product.IMAGEURLS.Split(';').ToList();
                        foreach (var image in tempList)
                        {
                            <img src="@image" class="card-img-top" alt="@product.NAME">

                        }

                    }

                }

                <div class="card-body">
                    <h5 class="card-title">@product.NAME</h5>
                    <p class="card-text">@product.DESCRIPTION</p>
                    @*$<p class="card-text">@hotel.PRICE</p>*@
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Detail", "Product", new { id = product.ID })" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



<script>
    $(document).ready(function () {

        updateActiveNavToHotel();

    });
</script>

