<h2>编辑产品信息</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="NAME">产品名称</label>
        <input class="form-control" asp-for="NAME" />
    </div>
    <div class="form-group">
        <label asp-for="DESCRIPTION">简短描述</label>
        <input class="form-control" asp-for="DESCRIPTION" />
    </div>
    <div class="form-group">
        <label asp-for="AREA">地区</label>
        <input class="form-control" asp-for="AREA" />
    </div>
    <div class="form-group">
        <label asp-for="COUNTRY">国家</label>
        <input class="form-control" asp-for="COUNTRY" />
    </div>
    <div class="form-group">
        <label asp-for="IMAGEURLS">产品图片</label>
        <input class="form-control" asp-for="IMAGEURLS" />
    </div>


    <button type="submit" class="btn btn-primary">更新</button>
    @Html.ActionLink("取消", "Manage", "Admin", null, new { @class = "btn btn-link" })
</form>


