@model AllInfo
@{
    ViewBag.Title = "Manage";
    Layout = "_Layout";

}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="hotels-tab" data-toggle="tab" href="#hotels" role="tab" aria-controls="hotels" aria-selected="true">Hotels</a>
        </li>
        <li class="nav-item" id="Tab2">
            <a class="nav-link" id="flights-tab" data-toggle="tab" href="#flights" role="tab" aria-controls="flights" aria-selected="false">Flights</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="cruises-tab" data-toggle="tab" href="#cruises" role="tab" aria-controls="cruises" aria-selected="false">Cruises</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false">Users</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="hotels" role="tabpanel" aria-labelledby="hotels-tab">
            <!-- content for hotels tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateHotel">Add Hotel</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hotel Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hotel in Model.Hotels)
                        {
                            <tr>
                                <td>@hotel.ID</td>
                                <td>@hotel.NAME</td>
                                <td>@hotel.DESCRIPTION</td>
                                <td>
                                    <a asp-controller="Hotel" asp-action="Detail" asp-route-id="@hotel.ID">Detail</a>
                                </td>
                                <td>
                                    <a asp-controller="Hotel" asp-action="Edit" asp-route-id="@hotel.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-controller="Hotel" asp-action="Delete" asp-route-id="@hotel.ID" method="get">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="flights" role="tabpanel" aria-labelledby="flights-tab">
            <!-- content for flights tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateFlight">Add Flight</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Flight Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var flight in Model.Flights)
                        {
                            <tr>
                                <td>@flight.ID</td>
                                <td>@flight.NAME</td>
                                <td>@flight.DESCRIPTION</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@flight.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@flight.ID" method="post">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="cruises" role="tabpanel" aria-labelledby="cruises-tab">
            <!-- content for cruises tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateCruise">Add Cruise</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cruise Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cruise in Model.Cruises)
                        {
                            <tr>
                                <td>@cruise.ID</td>
                                <td>@cruise.NAME</td>
                                <td>@cruise.DESCRIPTION</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@cruise.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@cruise.ID" method="post">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
            <!-- content for cruises tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateUser">Add User</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.USER_ID</td>
                                
                                <td>@user.USER_DESCRIPTION</td>
                                <td>
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.USER_ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-controller="User" asp-action="Delete" asp-route-id="@user.USER_ID" method="post">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
