<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="hotels-tab" data-toggle="tab" href="#hotels" role="tab" aria-controls="hotels" aria-selected="true">Hotels</a>
        </li>
        <li class="nav-item" id="Tab2">
            <a class="nav-link" id="places-tab" data-toggle="tab" href="#places" role="tab" aria-controls="places" aria-selected="false">Destinations</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="cruises-tab" data-toggle="tab" href="#cruises" role="tab" aria-controls="cruises" aria-selected="false">Cruises</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false">Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="products-tab" data-toggle="tab" href="#products" role="tab" aria-controls="products" aria-selected="false">产品管理</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="hotels" role="tabpanel" aria-labelledby="hotels-tab">
            <!-- content for hotels tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateHotel">Add Hotel</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hotel Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hotel in Model.Hotels)
                        {
                            <tr>
                                <td>@hotel.ID</td>
                                <td>@hotel.NAME</td>
                                <td>@hotel.DESCRIPTION</td>
                                <td>
                                    <a asp-controller="Hotel" asp-action="Detail" asp-route-id="@hotel.ID">Detail</a>
                                </td>
                                <td>
                                    <a asp-controller="Hotel" asp-action="Edit" asp-route-id="@hotel.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-controller="Hotel" asp-action="Delete" asp-route-id="@hotel.ID" method="get">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="places" role="tabpanel" aria-labelledby="places-tab">
            <!-- content for flights tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreatePlace">Add Place</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var place in Model.Places)
                        {
                            <tr>
                                <td>@place.ID</td>
                                <td>@place.NAME</td>
                                <td>@place.DESCRIPTION</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@place.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@place.ID" method="post">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="cruises" role="tabpanel" aria-labelledby="cruises-tab">
            <!-- content for cruises tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateCruise">Add Cruise</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cruise Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cruise in Model.Cruises)
                        {
                            <tr>
                                <td>@cruise.ID</td>
                                <td>@cruise.NAME</td>
                                <td>@cruise.DESCRIPTION</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@cruise.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@cruise.ID" method="post">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
            <!-- content for cruises tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateUser">Add User</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.ID</td>

                                <td>@user.DESCRIPTION</td>
                                <td>
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.ID">Edit</a>
                                </td>
                                <td>
                                    <form asp-controller="User" asp-action="Delete" asp-route-id="@user.ID" method="post">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="products" role="tabpanel" aria-labelledby="products-tab">
            <!-- content for cruises tab goes here -->
            <div class="container">
                <p>
                    <a asp-action="CreateProduct">添加新产品</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>名称</th>
                            <th>类型</th>
                            <th>排序</th>
                            <th>編輯</th>
                            <th>刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.ID</td>
                                <td>@product.NAME</td>
                                <td>@product.TYPE</td>
                                <td>@product.ORDER</td>
                                <td>
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ID">編輯</a>
                                </td>
                                <td>
                                    <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.ID" method="post">
                                        <button type="submit">刪除</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
