@model List<Cruise>

<div class="row">
    @foreach (var cruise in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@cruise.IMAGEURL" class="card-img-top" alt="@cruise.NAME">
                <div class="card-body">
                    <h5 class="card-title">@cruise.NAME</h5>
                    <p class="card-text">@cruise.DESCRIPTION</p>
                    $<p class="card-text">@cruise.PRICE</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Details", "Places", new { id = cruise.ID })" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script>
        $(document).ready(function () {

            updateActiveNavToPlace();

        });
</script>